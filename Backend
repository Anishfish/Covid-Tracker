#READS INPUT FROM HTML 
import cgi
import cgitb
cgitb.enable(display=0, logdir="/path/to/logdir")
form = cgi.FieldStorage()

#Fill in the parameter as what the HTML names of inputs are
hours = form.getvalue('Hours out and about')
hours_masks = form.getvalue('Hours wearing a mask')
overall_Health = form.getvalue('Overall health')

print("Content-Type: text/html")    # HTML is following
print()                             # blank line, end of headers




